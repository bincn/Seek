<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="LineBreakLayout">
        <attr name="horizontalSpacing" format="dimension"/>
        <attr name="verticalSpacing" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="BezelImageView">
        <attr name="maskDrawable" format="reference"/>
        <attr name="borderDrawable" format="reference"/>
        <attr name="desaturateOnPress" format="boolean"/>
    </declare-styleable>

    <!-- DrawerItemView -->
    <declare-styleable name="DrawerItemView">
        <attr name="divText" format="string"/>
        <attr name="divImage" format="reference"/>
    </declare-styleable>

    <!-- SettingItemView -->
    <declare-styleable name="SettingItemView">
        <attr name="sivText" format="string"/>
        <attr name="sivSubText" format="string"/>
        <attr name="sivShowCheck" format="boolean"/>
        <attr name="sivChecked" format="boolean"/>
    </declare-styleable>

    <!-- MultiStatusLayout -->
    <declare-styleable name="MultiStatusLayout">
        <attr name="msl_content_view" format="reference"/>
        <attr name="msl_content_view_id" format="reference"/>
        <attr name="msl_no_network_view" format="reference"/>
        <attr name="msl_empty_view" format="reference"/>
    </declare-styleable>

</resources>